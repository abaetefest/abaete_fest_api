# ===========================================
# Database Configuration
# ===========================================

# Database Host
# - For local development without Docker: localhost
# - For docker-compose: db (auto-set in docker-compose.yml)
DB_HOST=localhost

# Database Port (default: 5432)
DB_PORT=5432

# Database Credentials
DB_USER=postgres
DB_PASSWORD=postgres

# Database Name
# - Development: abaete_fest_api_dev
# - Production: abaete_fest_api_prod
DB_NAME=abaete_fest_api_dev

# Production Database URL (alternative to individual DB_* vars)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/abaete_fest_api_prod

# Connection Pool Size
POOL_SIZE=10

# ===========================================
# Application Configuration
# ===========================================

# Mix Environment (dev, test, prod)
MIX_ENV=dev

# Application Port
PORT=4000

# Application Host
APP_HOST=localhost
APP_PORT=80

# Secret Key Base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret

# ===========================================
# Dokploy Configuration (for deployment)
# ===========================================

DOKPLOY_DOMAIN=your-domain.com
DOKPLOY_PORT=80

# ===========================================
# AWS S3 Configuration (for file uploads)
# ===========================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BUCKET_NAME=your_bucket_name
REGION=us-east-1

# ===========================================
# OneSignal Push Notifications
# ===========================================

ONESIGNAL_ID=your_onesignal_app_id
ONESIGNAL_KEY=your_onesignal_api_key
