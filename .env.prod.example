# ===========================================
# Production Environment Configuration
# ===========================================
# Copy this file to .env.prod and update with your production values
# NEVER commit .env.prod to version control!

# ===========================================
# Database Configuration
# ===========================================

DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=abaetefest_prod

# Connection Pool Size (increase for production)
POOL_SIZE=20

# ===========================================
# Application Configuration
# ===========================================

# Mix Environment
MIX_ENV=prod

# Application Port
PORT=4000

# Application Host
APP_HOST=your-production-domain.com
APP_PORT=443

# Secret Key Base (MUST generate with: mix phx.gen.secret)
SECRET_KEY_BASE=CHANGE_ME_GENERATE_WITH_MIX_PHX_GEN_SECRET

# ===========================================
# Dokploy Configuration
# ===========================================

DOKPLOY_DOMAIN=your-production-domain.com
DOKPLOY_PORT=443

# ===========================================
# AWS S3 Configuration
# ===========================================

AWS_ACCESS_KEY_ID=your_production_aws_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret
BUCKET_NAME=your-production-bucket
REGION=us-east-1

# ===========================================
# OneSignal Push Notifications
# ===========================================

ONESIGNAL_ID=your_production_onesignal_app_id
ONESIGNAL_KEY=your_production_onesignal_api_key
